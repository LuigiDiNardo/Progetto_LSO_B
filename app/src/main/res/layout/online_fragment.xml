<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/online_status_img"
        android:layout_width="124dp"
        android:layout_height="107dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/location"
        app:layout_constraintBottom_toBottomOf="@+id/online_container"
        app:layout_constraintEnd_toEndOf="@id/online_container"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/online_text"
        app:layout_constraintTop_toTopOf="@+id/online_status" />

    <TextView
        android:id="@+id/online_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Sei online/sei offline"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@id/online_text"
        app:layout_constraintEnd_toStartOf="@id/online_status_img"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@id/online_container"
        app:layout_constraintTop_toTopOf="@id/online_container"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/online_text"
        android:layout_width="223dp"
        android:layout_height="71dp"
        android:layout_below="@id/online_status"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Gli altri utenti possono sapere dove ti trovi!\n\nOcchio a dove vai!"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/online_container"
        app:layout_constraintEnd_toEndOf="@id/online_container"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="@id/online_container"
        app:layout_constraintTop_toBottomOf="@+id/online_status"
        app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/online_container"
        android:layout_width="381dp"
        android:layout_height="150dp"
        android:background="@drawable/border_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />



</androidx.constraintlayout.widget.ConstraintLayout>
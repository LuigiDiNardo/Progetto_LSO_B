<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/meesages_container"
        android:layout_width="381dp"
        android:layout_height="150dp"
        android:background="@drawable/border_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <ImageView
        android:id="@+id/messages_img"
        android:layout_width="124dp"
        android:layout_height="107dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/new_messages_tv"
        app:layout_constraintEnd_toEndOf="@+id/meesages_container"
        app:layout_constraintTop_toTopOf="@+id/new_messages_tv"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/new_messages_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:text="Hai xx nuovi messaggi!"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/meesages_container"
        app:layout_constraintEnd_toStartOf="@+id/messages_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/meesages_container"
        app:layout_constraintTop_toTopOf="@+id/meesages_container" />


</androidx.constraintlayout.widget.ConstraintLayout>